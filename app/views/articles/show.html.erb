<div class="flex flex-col">
  <h1 class="text-4xl"><%= @article.title %></h1>
  <h1 class="text-2xl"><%= @article.entry %></h1>
  <p><%= @article.contents %></p>
  <p><%= @article.user_id %></p>
  <p><%= @article.id %></p>
  <%= link_to "Back to Articles", articles_path, class: "btn btn-primary border border-gray-300 p-1 rounded mt-4" %>


  <% if user_signed_in? %>
    <% if current_user.subscribed_articles.include?(@article) %>
      <%= button_to 'Unsubscribe', subscription_path(article_id: @article.id), method: :delete, class:"border border-red-300 p-1 rounded mt-4" %>

    <% else %>
      <%= button_to 'Subscribe', subscriptions_path(article_id: @article.id), method: :post, class:"border border-red-300 p-1 rounded mt-4" %>
    <% end %>
  <% end %>
  <% if @article.user_id == current_user.id %>
    <%= button_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class:"border border-red-300 p-1 rounded mt-4"  %>
    <%= link_to "Edit Article", edit_article_path(@article) ,class:"border border-blue-300 p-1 rounded mt-4"  %>
  <% end %>
</div>

